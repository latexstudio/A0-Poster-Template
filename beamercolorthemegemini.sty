% Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

\definecolor{lightgray}{RGB}{245, 246, 250}
\definecolor{blue}{RGB}{64, 115, 158}
\definecolor{darkblue}{RGB}{39, 60, 117}
\definecolor{nwupurple}{HTML}{6C3D91}
\definecolor{nwucyan}{RGB}{26, 138, 162}
\definecolor{mywhite}{HTML}{FFFFFA}
\definecolor{engineeringgrey}{RGB}{127, 147, 159}
\definecolor{mygreen}{HTML}{2CDA9D}
\definecolor{myblack}{HTML}{353535}
\definecolor{myred}{HTML}{D00000}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=myblack,bg=mywhite}
\setbeamercolor{palette secondary}{fg=myblack,bg=mywhite}
\setbeamercolor{palette tertiary}{bg=myblack,fg=mywhite}
\setbeamercolor{palette quaternary}{fg=myblack,bg=mywhite}
\setbeamercolor{structure}{fg=darkblue}

% Headline
\setbeamercolor{headline}{fg=mywhite}

% Block
% \setbeanercolor{block border}{fg=mywhite,bg=blue}
\setbeamercolor{block title}{fg=mywhite,bg=nwupurple}
\setbeamercolor{block separator}{bg=myblack}
\setbeamercolor{block body}{fg=myblack,bg=mywhite}

% Accented Block
% \setbeanercolor{block border}{fg=mywhite,bg=blue}
\setbeamercolor{block example title}{fg=mywhite,bg=nwucyan}
\setbeamercolor{block example separator}{bg=myblack}
\setbeamercolor{block example body}{fg=myblack,bg=mywhite}

% HIGHLY ACCENTED BLOCK
\setbeamercolor{block alerted title}{fg=mywhite,bg=mygreen}
\setbeamercolor{block alerted separator}{bg=mywhite}
\setbeamercolor{block alerted body}{fg=mywhite,bg=mygreen}

% Heading
\setbeamercolor{heading}{fg=myblack}

% Itemize
\setbeamercolor{item}{fg=mygreen}

% Bibliography
\setbeamercolor{bibliography item}{fg=myblack}
\setbeamercolor{bibliography entry author}{fg=myblack}
\setbeamercolor{bibliography entry title}{fg=myblack}
\setbeamercolor{bibliography entry location}{fg=myblack}
\setbeamercolor{bibliography entry note}{fg=myblack}
